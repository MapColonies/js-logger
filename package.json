{
  "name": "@map-colonies/js-logger",
  "version": "2.0.0",
  "description": "Javascript and typescript logger for MapColonies based on pino",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "tsc --noEmit -p tsconfig.json && jest --config=./tests/configurations/jest.config.js",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build",
    "prepare": "husky",
    "docs": "typedoc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/js-logger.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/js-logger/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/MapColonies/js-logger#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@map-colonies/commitlint-config": "^1.1.0",
    "@map-colonies/eslint-config": "^6.0.0",
    "@map-colonies/infra-copilot-instructions": "^1.0.0",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/tsconfig": "^1.0.0",
    "@swc/core": "^1.7.26",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "commitlint": "^19.5.0",
    "eslint": "^9.22.0",
    "eslint-plugin-jest": "^28.11.0",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.28.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "pino": "^9.4.0",
    "pino-caller": "^3.4.0",
    "pino-pretty": "^13.0.0"
  }
}
