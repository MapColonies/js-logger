{
  "name": "@map-colonies/js-logger",
  "version": "0.0.5",
  "description": "Javascript and typescript logger for MapColonies based on pino",
  "main": "./dist/index.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "jest --config=./tests/configurations/jest.config.js",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/js-logger.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/js-logger/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/js-logger#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@map-colonies/eslint-config": "^3.1.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.38",
    "commitlint": "^17.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.0.8",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "pino": "^7.9.2",
    "pino-pretty": "^7.6.0"
  }
}
